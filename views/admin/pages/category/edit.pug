extends ../../layouts/default.pug
include ../../mixins/alert.pug
include ../../mixins/select-tree.pug
block main

    h1(class="site-title") EDIT CATEGORY

    form(
        action=`${prefixAdmin}/category/edit/${category.id}?_method=PATCH`
        id="form-edit-category"
        method="POST"
        enctype="multipart/form-data"
    )

        div(class="form-group")
            label(for="title") Title 
            input(
                type="text"
                class="form-control"
                id="title"
                name="title"
                value=category.title
            )
        div(class="form-group")
            label(for="parent_id") Parent category
            select(
                name="parent_id"
                id="parent_id"
                class="form-control"
            )
                option(value="") --Select parent category-- 
                if(records)
                    +select-tree(records,1,category.parent_id)

        div(class="form-group")
            label(for="desc") Description
            textarea(
                class="form-control mce"
                id="desc"
                name="description"
                row="5"
            ) #{category.description}
        div(class="form-group"
            upload-image
        )
            label(for="image") Image 
            input(
                type="file"
                class="form-control-file"
                id="image"
                name="image"
                accept="image/*"
                upload-image-input
            )
            img(
            src=category.image
            upload-image-preview
            class="image-preview"
            )
        div(class="form-group")
            label(for="position") Position
            input(
                type="number"
                class="form-control"
                id="position"
                name="position"
                min="1"
                value=category.position
            ) 
        div(class="form-group")
            button(
                type="submit"
                class="add-button"
            ) UPDATE

    script(src="/admin/js/script.js")