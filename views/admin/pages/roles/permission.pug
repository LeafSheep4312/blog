extends ../../layouts/default.pug 

block main
    h1(class="site-title") CREATE NEW ROLES
    
    div(data-records=records)

    div.text-right
        button(
            type="submit"
            class="add-button"
            button-submit
        ) Update

    table(
        class="table table-hover table-sm"
        table-permission
        )
        thead   
            tr 
                th Feature
                each item in records
                    th(class="text-center") #{item.title}
        tbody 
            tr(data-name="id" style="display: none;")
                td 
                each item in records 
                    td(class="text-center")
                        input(
                            type="text"
                            value=item.id
                        )
            tr(data-name="post-view")
                td View Post 
                each item in records 
                    td(class="text-center")
                        input(type="checkbox")
            tr(data-name="category-view")
                td View Category 
                each item in records 
                    td(class="text-center")
                        input(type="checkbox")
            tr(data-name="add")
                td Add 
                each item in records 
                    td(class="text-center")
                        input(type="checkbox")
            tr(data-name="edit")
                td Edit 
                each item in records 
                    td(class="text-center")
                        input(type="checkbox")
            tr(data-name="delete")
                td Delete 
                each item in records 
                    td(class="text-center")
                        input(type="checkbox")
            tr(data-name="account")
                td Account 
                each item in records 
                    td(class="text-center")
                        input(type="checkbox")
    form(
        action=`${prefixAdmin}/roles/permissions?_method=PATCH`
        method="POST"
        id="form-change-permissions"
    )
        div(class="form-group")
            input(
                class="form-control"
                type="text"
                name="permissions"
                style="display: none;"
            )

    script(src="/admin/js/role.js") 