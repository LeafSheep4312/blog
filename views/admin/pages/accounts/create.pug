extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
    h1(class="site-title") CREATE NEW ACCOUNT
    +alert-error(5000)
    form(
        action=`${prefixAdmin}/accounts/create`
        id="form-create-post"
        method="POST"
        enctype="multipart/form-data"
    )

        div(class="form-group")
            label(for="fullName") Full name * 
            input(
                type="text"
                class="form-control"
                id="fullName"
                name="fullName"
                required
            )
        div(class="form-group")
            label(for="email") Email * 
            input(
                type="email"
                class="form-control"
                id="email"
                name="email"
                required
            )
        div(class="form-group")
            label(for="password") Password * 
            input(
                type="password"
                class="form-control"
                id="password"
                name="password"
                required
            )
        div(class="form-group")
            label(for="phone") Phone number 
            input(
                type="text"
                class="form-control"
                id="phone"
                name="phone"
            )
        div(class="form-group"
            upload-image
        )
            label(for="image") Avatar
            input(
                type="file"
                class="form-control-file"
                id="avatar"
                name="avatar"
                accept="image/*"
                upload-image-input
            )
            img(
            src=""
            upload-image-preview
            class="image-preview"
            )
        div(class="form-group")
            label(for="role_id") Permission
            select(name="role_id" id="role_id" class="form-control")
                option(disabled) --Select--
                each item in roles 
                    option(value=item.id) #{item.title}
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusActive"
                name="status"
                value="active"
                checked
            )
            label(for="statusActive" class="form-check-label") Active
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusInActive"
                name="status"
                value="inactive"
            )
            label(for="statusInActive" class="form-check-label") Inactive
             
        div(class="form-group")
            button(
                type="submit"
                class="add-button"
            ) CREATE

    script(src="/admin/js/script.js")