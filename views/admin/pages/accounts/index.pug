extends ../../layouts/default.pug 

block main
    h1(class="site-title") ACCOUNTS
    .card.mb-3 
        .card-header
        .card-body 
            .row 
                .col-8
                    a(
                        href=`${prefixAdmin}/accounts/create`
                        class="add-button"
                    ) + ADD NEW
    table(
        class="post-table"
    )
        thead 
            tr
                th Name
                th Avatar
                th Role
                th Email
                th Phone
                th Action
        tbody
            tbody
            each item in accounts 
                tr 
                    td #{item.fullName}
                    td 
                        img(
                            src=item.avatar
                            alt=item.fullName 
                            width="200px"
                            height="auto"
                        )
                    td #{item.role.title}
                    td #{item.email}
                    td #{item.phone}
                    td 
                        a(
                            href=`${prefixAdmin}/posts/detail/${item.id}`
                            class="btn btn-secondary btn-sm" 
                        ) Detail
                        a(
                            href=`${prefixAdmin}/accounts/edit/${item.id}`
                            class="btn btn-warning btn-sm ml-1" 
                        ) Edit
                        button(
                            data-id = item.id 
                            delete-button
                            class="btn btn-danger btn-sm ml-1"
                        ) Delete


    form(
        action=""
        method="POST"
        id="form-delete-item"
        data-path=`${prefixAdmin}/category/delete`
    )
          
    script(src="/admin/js/script.js")